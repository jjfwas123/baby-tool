/* components/custom/calendar/index.wxss */
@import '../../style/common.wxss';
.color-999{
  color: #999 !important;
}

.calendar {
  background-color: #FFFFFF;
  box-shadow: 0 0 16rpx 0 rgba(0,0,0,0.04);
  padding: 24rpx;
}

.calendar-weekday{
  display: flex;
  font-size: 30rpx;
  font-weight: 600;
}
.weekday-item{
  flex: 1;
  text-align: center;
}

.calendar-month{
  padding-top: 24rpx;
  padding-bottom: 16rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.calendar-body{
  display: flex;
  flex-wrap: wrap;
}
.day-item-container{
  width: 14.28%;
  min-height: 110rpx;
  text-align: center;
}
.day-item{
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  background-color: #FFFFFF;
  border-radius: 50%;
  font-size: 40rpx;
}
.day-item-active{
  background: var(--background-primary-color) !important;
  color: #FFFFFF !important;
}
.calendar-more{
  display: flex;
  align-items: center;
  justify-content: center;
}
.calendar-more-arrow{
  width: 32rpx;
  height: 32rpx;
  padding: 0 20rpx;
  padding-top: 16rpx;
}
.icon-arrow-double{
  width: 32rpx;
  height: 32rpx;
}
.calendar-select{
  padding-top: 16rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  text-align: center;
}
.top{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.select-year{
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid #EDEDED;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select-year-text{
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
.icon-arrow{
  width: 24rpx;
  height: 24rpx;
}
/* 日历 */
.week-header {
  color: #333 !important;
  background-color: #fff;
  box-shadow: 0 5px 16px -5px rgba(0, 0, 0, 0.06);
  width: 100%;
  height: 34rpx;
  position: fixed;
  top: 80rpx;
  left: 0;
  z-index: 99;
}

.tips-text {
  text-align: center;
  font-size: 24rpx;
  color: #b12020;
}

.danger-color {
  color: #f00;
}